<Page x:Class="OBS_Remote_Controls.WPF.Pages.Connection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OBS_Remote_Controls.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignWidth="620" d:DesignHeight="390"
      Title="Connection">

    <Grid>
        <Label Content="Address:" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Padding="0,5,5,5"/>
        <TextBox Name="address" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="465" Margin="0,27,0,0" Text="ws://ip:port"/>
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,57,0,0" FontSize="14" Padding="0,5,5,5"/>
        <PasswordBox Name="password" VerticalAlignment="Top" Height="25" Margin="0,84,0,0" HorizontalAlignment="Left" Width="465"/>
        <Button Content="Connect" Click="connect_Click" Name="connect" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="0,119,0,0" Height="30"/>
        <Label Content="Status: Disconnected" Name="status" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,149,0,0" FontWeight="Normal" Padding="0,5,5,5"/>
    </Grid>
</Page>
